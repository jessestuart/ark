ARG target
FROM golang:1.12 as builder

ARG goarch
ENV GOOS linux
ENV GOARCH $goarch
ENV CGO_ENABLED 0

ENV image heptio/velero
WORKDIR /go/src/github.com/${image}

RUN \
  git clone --depth=1 https://github.com/${image} . && \
  go build -o /bin/velero-restic-restore-helper cmd/velero-restic-restore-helper/main.go

