# RUN apk add --no-cache --update ca-certificates && \
#   bunzip2 restic.bz2 && \
#   chmod +x /restic && \
#   mv /restic /usr/bin/restic

# USER nobody:nobody

# ENTRYPOINT ["/velero"]

# ARG target
FROM $target/ubuntu:disco

COPY qemu-* /usr/bin/

LABEL maintainer="Jesse Stuart <hi@jessestuart.com>"

COPY --from=builder /bin/velero-restic-restore-helper /bin/velero-restic-restore-helper

USER nobody

ENTRYPOINT [ "/bin/velero-restic-restore-helper" ]
